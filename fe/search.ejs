                        "                <div class=\"card-body\">\n" +
                        "                    <blockquote class=\"blockquote mb-0\">";

                    for (var i = 0; i < l.length; i++) {
                        searchHtml += "<p>" + l[i] +"</p>";
                    }

                    searchHtml += "</blockquote>\n" +
                        "                </div>\n" +
                        "            </div>";
                });

                $("#search-container").html(searchHtml)
            }

        })

    })
